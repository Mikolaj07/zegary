<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewAktualnyczas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="72sp"
        android:textAlignment="center"
        android:padding="16sp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/buttononStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:backgroundTint="#89FF00"/>

    <Button
        android:id="@+id/buttonPauza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pouza"
        android:backgroundTint="#FF0000"/>

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="reset"
        android:backgroundTint="#000000"/>

    <Button
        android:id="@+id/buttonZapisz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zapisz"
        android:backgroundTint="#00FFFF"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewZapisanieCzasy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zapisanie czasy: \n" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>